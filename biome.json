{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "examples/angular/.angular/cache/*",
      "./examples/*/public/*",
      "./examples/blazor/wasm/wwwroot/css/*",
      "./examples/wasm-benchmark/*",
      "./examples/asp-net/*"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
